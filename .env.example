# Baby Buddy Environment Configuration
# Copy this file to .env and update the values

# Django Settings
SECRET_KEY=changeme-generate-a-secure-random-key
DEBUG=False
DJANGO_SETTINGS_MODULE=babybuddy.settings.base
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,babybuddy.parashuramjoshi.in

# Database Configuration (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=babybuddy
DB_USER=change-me
DB_PASSWORD=change-me
DB_HOST=db
DB_PORT=5432

# Time Zone
TIME_ZONE=UTC

